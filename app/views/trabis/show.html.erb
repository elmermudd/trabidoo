<div class="container">
  <div class="row justify-content-center my-3">
    <div class="col-md-10">

      <h2> <strong><%= @trabi.title %></strong> </h2>
      <hr>
      <div class="d-flex justify-content-around my-4">

        <div class="w-50 card p-3 rounded-lg">
          <p> <strong>Color: </strong> <%= @trabi.color %></p>
          <p> <strong>Year: </strong> <%= @trabi.year %></p>
          <p> <strong>About: </strong> <%= @trabi.description %></p>
          <% if @trabi.address %>
          <p> <strong> Location: </strong> <%= @trabi.address %> </p>
          <% end %>
        </div>

        <div class="justify-content-around my-3">
          <div class="my-3">
            <%= form_for(@booking) do |f| %>
              <%= hidden_field_tag 'user_id', @user.id %>
              <%= hidden_field_tag 'trabi_id', @trabi.id %>
              <div class="form-group">
                <%= f.label :start_date %>
                <%= f.date_field :start_date, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :end_date %>
                <%= f.date_field :end_date, class: 'form-control' %>
              </div>
              <%= f.submit class: 'btn btn-primary', value: 'Book this Trabant' %>
            <% end %>
          </div>
        </div>

      </div>

      <!-- TODO: NEED TO SORT OUT USER OWNER AND USER RENTER HERE AND CONTROLLER -->
      <div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <!-- TODO: insert @trabi.image1 -->
              <% if @trabi.pictures.present? %>
               <%= cl_image_tag @trabi.pictures.first.url  %>
               <% else %>
                <img src="https://cdn.motor1.com/images/mgl/xxobp/s1/trabant-601-by-vilner.jpg" />
               <% end %>
            </div>

               <% @trabi.pictures.each do |picture| %>
                   <div class="carousel-item">
              <!-- TODO: insert @trabi.image2 -->
                      <%= cl_image_tag picture.url  %>
                  </div>
               <% end %>
              <!-- <img class="d-block w-100" src="https://cdn.motor1.com/images/mgl/xxobp/s1/trabant-601-by-vilner.jpg" alt="First slide"> -->

          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="card p-3 my-5">
        <div class="d-flex justify-content-around ">
          <%= link_to 'Edit Trabant', edit_trabi_path, class: "btn btn-small btn-primary"%>
          <%= link_to 'Back to Search Trabants', trabis_path, class: "btn btn-small btn-primary"%>
          <%= link_to "Delete", trabi_path(@trabi), class: "btn btn-small btn-primary",
              method: :delete,
              data: { confirm: "Are you sure?" } %>
        </div>
      </div>


    </div>
  </div>
</div>

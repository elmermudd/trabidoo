<div class="container">
  <div class="my-4">
    <h1>Add new Trabant</h1>
    <hr>
  </div>

<!-- TODO: Prevent users from creating new trabi rentals if not logged in, make alert -->
<div class="card p-3 rounded">
  <%= simple_form_for [@trabi] do |t| %>
    <%= t.input :title, label: 'Title' %>
    <%= t.input :description, label: 'Description' %>
    <%= t.input :year, label: 'Year' %>
    <%= t.input :color, label: 'Color' %>
    <%= t.input :address, label: 'Address' %>
    <%= t.input :user_id, as: :hidden, input_html: {value: current_user[:id] } %>
    <%= t.input :pictures, as: :file, input_html: { multiple: true } %>
    <%= t.submit 'Submit', class: "btn btn-primary mb-2" %>
    <%= link_to 'Cancel', trabis_path, class: "btn btn-small btn-danger mb-2"%>
  <% end %>
</div>
